<div class="container">
    <h2>{{post.title}}</h2>
    <p>{{post.content}}</p>
    <p>Posted by {{post.username}} on {{post.created_at}}</p>

    {{#if logged_in}}
    <form id="comment-form">
        <textarea id="comment" required></textarea>
        <button type="submit">Submit Comment</button>
    </form>
    {{/if}}

    {{#each post.comments}}
    <div class="comment">
        <p>{{this.content}}</p>
        <p>Commented by {{this.username}} on {{this.created_at}}</p>
    </div>
    {{/each}}
</div>

<script src="/js/comment.js"></script>
