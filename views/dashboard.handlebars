<div class="container">
    <h2>Your Dashboard</h2>

    <form class="new-post-form">
        <input type="text" name="post-title" placeholder="Title">
        <textarea name="post-content" placeholder="Content"></textarea>
        <button type="submit">Create a New Post</button>
    </form>

    <a href="/new-post">Create a New Post</a>

    {{#each posts}}
    <div class="post">
        <h3>{{this.title}}</h3>
        <p>{{this.content}}</p>
        <p>Posted on {{this.created_at}}</p>
        <a href="/post/{{this.id}}">Read more</a>
        <a href="/post/{{this.id}}/edit">Edit</a>
        <button class="delete-post-btn" data-id="{{this.id}}">Delete</button>
    </div>
    {{/each}}
    <script src="/js/post.js"></script>
</div>
